var script_loaded=!1,is_popup=!1;function OrderModelPopup(e){return!!(1==paAjax.is_mobile||$("#popup_cart")&&"relative"==$("#popup_cart").css("position"))||(script_loaded||(script_loaded=!0,document.createStyleSheet?document.createStyleSheet(paAjax.url_cart_css):$("head").append($("<link rel='stylesheet' href='"+paAjax.url_cart_css+"' type='text/css' media='screen' />")),$.getScript(paAjax.eshopcarturl),void 0!==paAjax.is_home&&1==paAjax.is_home&&$.getScript(paAjax.main2_js)),LoadCart(e),jQuery("body").addClass("overlay_open"),jQuery("#cart_loader").show(),jQuery("#popup_cart").show(),jQuery("#popup_cart_overlay").show(),!1)}function LoadCart(e){e=jQuery(e).closest("form");jQuery.ajax({type:"post",url:paAjax.ajaxurl,data:e.serialize()+"&action=popup_cart",dataType:"json",success:function(e){"1"==e.retcode&&(is_popup=!0,jQuery("#cart_loader").hide(),jQuery(".cart_count").text(e.amount),jQuery(".faq-cart").html(e.cart),jQuery("#cart-product-list").length||jQuery(".faq-cart").after(e.cart_additional),jQuery("#clearlink").remove(),jQuery(".rtnshopping").remove(),ApplyClassesForCart(),"function"==typeof LazyLoadingImages&&LazyLoadingImages())}})}jQuery("#closebg, #popup_cart").click(function(e){"closebg"!=e.target.id&&"popup_cart"!=e.target.id||(jQuery("#popup_cart").hide(),jQuery("#popup_cart_overlay").hide(),jQuery("body").removeClass("overlay_open"),jQuery(".faq-cart").html(""),jQuery(".block-additional-cart").remove())});